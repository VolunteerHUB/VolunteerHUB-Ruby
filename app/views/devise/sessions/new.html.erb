<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-horizontal" }) do |f| %>
  <div class="form-group">
    <label class="col-sm-3 control-label">Email</label>
    <div class="col-sm-3">
      <input autofocus="autofocus" type="email" class="form-control" name="user[email]" id="user_email" placeholder="Email" />
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-3 control-label">Password</label>
    <div class="col-sm-3">
      <input autofocus="autofocus" type="password" class="form-control" name="user[password]" id="user_password" placeholder="Password" />
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-3 control-label">Remember Me</label>
    <div class="col-sm-6">
      <div class="checkbox">
        <label>
          <input type="hidden" name="user[remember_me]" value="0" />
          <input type="checkbox" name="user[remember_me]" id="remember" value="1" />
        </label>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-3 col-sm-3">
      <button type="submit" name="commit" class="btn btn-primary">Sign In</button>
    </div>
  </div>
<% end %>